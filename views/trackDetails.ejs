  <h5 class="comments"><%=comment.name%>: <%=comment.content%></h5>
  <form action="/comment/<%=result.id%>?_method=PUT" method="POST">
    
     <input type="text" name="name" value="<%=comment.name%>" > <!--this will desplay Name for the input and-->
     <input type="text" name="id" value="<%=comment.id%>" > <!--this will desplay Name for the input and-->
    Comment: <input type="text" name="content" value="<%=comment.content%>">
    <input type="text" name="trackId" value="<%=result.id%>" >
    <button type="submit">Submit</button>
  </form>
  
<%})%>




